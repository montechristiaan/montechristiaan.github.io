<h1>Eat A Burger!</h1>

<img src="../assets/images/burger.jpg" alt="burger" class="burger">

<br>
<br>

<h2>Available Burgers:</h2>

<ul>
  {{#each burgers}}
    {{#unless devoured}}
        <li>
          {{burger_name}}
        <button class="change-devoured" data-id="{{id}}" data-devoured="{{devoured}}">
          {{#if devoured}}{{else}}Devour It!{{/if}}
        </button>
        </li>
    {{/unless}}
  {{/each}}
</ul>



<h2>Devoured Burgers:</h2>

<ul>
  {{#each burgers}}
    {{#if devoured}}
        <li>
          {{burger_name}}
        </li>
    {{/if}}
  {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="ca" name="name">
  </div>

  <br>

  <button type="submit">Add Burger</button>
</form>


